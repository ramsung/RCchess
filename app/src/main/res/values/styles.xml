<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Flat" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/standard_padding_2</item>
        <item name="android:paddingEnd">@dimen/standard_padding_2</item>
        <item name="android:radius">@dimen/standard_radius</item>
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.SubHeader" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:tag">title</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>
    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="android:dialogTheme">@style/MyDialogStyleRed</item>
        <item name="android:alertDialogTheme">@style/MyDialogStyleRed</item>
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>
    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:dialogTheme">@style/MyDialogStyleBlue</item>
        <item name="android:alertDialogTheme">@style/MyDialogStyleBlue</item>
    </style>

    <style name="AppThemePurple" parent="AppTheme">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkpurple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:dialogTheme">@style/MyDialogStylePurple</item>
        <item name="android:alertDialogTheme">@style/MyDialogStylePurple</item>
    </style>

    <style name="AppThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:dialogTheme">@style/MyDialogStyleGreen</item>
        <item name="android:alertDialogTheme">@style/MyDialogStyleGreen</item>
    </style>

    <style name="AppThemeGrey" parent="AppTheme">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/darkgrey</item>
        <item name="colorAccent">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="android:dialogTheme">@style/MyDialogStyleGrey</item>
        <item name="android:alertDialogTheme">@style/MyDialogStyleGrey</item>
    </style>

    <style name="AppThemeOrange" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkorange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="android:dialogTheme">@style/MyDialogStyleOrange</item>
        <item name="android:alertDialogTheme">@style/MyDialogStyleOrange</item>
    </style>

    <style name="MyDialogStyleRed" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="MyDialogStyleBlue" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="MyDialogStylePurple" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darkpurple</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="MyDialogStyleGreen" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="MyDialogStyleOrange" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkorange</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="MyDialogStyleGrey" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/darkgrey</item>
        <item name="colorAccent">@color/grey</item>
    </style>

</resources>